doctype html
html
	head
		title docente
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css')
		script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')
		// <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
		script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js')
	body
		// Nombre del Sitio
		.container.text-center.jumbotron
			h1 Plataforma Educativa Regimiento Aroma
		// Navbar
		.container
			include navbar/navbarDoce.pug
		hr
		// Contenderores
		.container
			.row
				.col-md-7.border.border-dark.jumbotron
					h2 MODULO DOCENTE
					p Cursos
					if (cursos == 0)
						p No tiene Curso
					else
						for n in cursos
							.row
								.col-sm-6.my-1
									if n.nivel <=1
										a.btn.btn-info.btn-block(href='/doce/add_content/'+n.id+'') #{n.nombre} Nivel inicial
									else
										a.btn.btn-info.btn-block(href='/doce/add_content/'+n.id+'') #{n.nombre} Nivel primario
				
				