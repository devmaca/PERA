doctype html
html
	head
		title agregar
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css')
		script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')
		// <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
		script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js')
	body
		// Nombre del Sitio
		.container.text-center.jumbotron
			h1 Plataforma Educativa Regimiento Aroma
		// Navbar
		.container
			include ../navbar/navbarDoce.pug
		hr
		// Contenderores
		.container
			.row
				.col-md-7.border.border-dark.jumbotron
					h3 Agregar Video
					form(action='/doce/add_content_video/'+cursoId+'', enctype="multipart/form-data",method='post')
						.form-group
							label(for='titulo') Titulo 
							input#titulo.form-control(type='text', name='titulo', placeholder='titulo')
						.form-group
							label(for='descripcion') Descripcion 
							textarea.form-control(name='descripcion')
						.form-group
							label(for='seccion') Seccion
							select(name='seccion') 
								option(value="1") 1
								option(value="2") 2
								option(value="3") 3
								option(value="4") 4
						.form-group
							label(for='uri') Enlace Video
							br
							p.text-secondary Ejemplo: https://youtu.be/QgvsU6hYYv0
							input#titulo.form-control(type='text', name='uri', placeholder='URL Enlace Video')
						.form-group
							label(for='area') Area 
							select(name='area', style='')
								for a in areas
									option(value=a.id) #{a.nom}
						.row.top-space
							.col-xs-6.col-sm-6
								input.btn.btn-primary.btn-block(type='submit', value='Guardar')
				.col-md-1
				// contenedor login
				.border.border-dark.col-md-4.jumbotron
					h2.border.border-dark Ver Contenido Materias
					for aa in areas
						.form-group.border.border-dark
							a.btn.btn-warning(href='/home/curso/'+cursoId+'/'+aa.id+'') #{aa.nom}
		style(type='text/css').
			.fond_color{
			background-color:#549EB8;
			}