doctype html
html
	head
		title show all
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css')
		script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')
		// <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
		script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js')
		link(href="/public/css/app.css" rel="stylesheet")

	body
		// Nombre del Sitio
		//- .container.text-center.jumbotron
		//- 	h1 Plataforma Educativa Regimiento Aroma
		// Navbar
		.container
			include ../navbar/navbarHome.pug
		hr
		// Contenderores
		.container
			.row
				.col-md-7.border.border-dark
					h2 #{content[0].titulo}
					hr
					p Descripcion : #{content[0].descripcion}
					hr
					p Area : #{content[0].areaId}
					hr
					if (content[0].tipo == 'docu')
						iframe(src='/'+content[0].contenido+'', width='100%' height="100%")
					else if (content[0].tipo == 'video')
						iframe(src='https://www.youtube.com/embed/'+content[0].contenido+'', width='100%' height="100%")

					hr
		style(type='text/css').
			.fond_color{
			background-color:#549EB8;
			}